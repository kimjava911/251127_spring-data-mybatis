<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace 주의! -->
<mapper namespace="kr.java.mybatis.mapper.PostMapper">
    <!-- 글 작성 -->
    <insert id="insertPost" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post (author_id, title, content)
        VALUES (#{authorId}, #{title}, #{content})
    </insert>

    <!-- 기본 ResultMap (N:1 관계 포함) -->
    <resultMap id="postWithAuthorMap" type="Post">
        <id property="id" column="id"/>
        <result property="authorId" column="author_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="likeCount" column="like_count"/>
        <result property="createdAt" column="created_at"/>

        <!-- association: N:1 관계 - 작성자 정보 -->
        <association property="author" javaType="UserInfo">
            <id property="id" column="author_id"/>
            <result property="nickname" column="nickname"/>
        </association>
    </resultMap>

    <!-- 게시글 목록 조회 (1:N의 역방향 - N:1) -->
    <select id="findAllWithAuthor" resultMap="postWithAuthorMap">
        SELECT
            p.id, p.author_id, p.title, p.content,
            p.like_count, p.created_at,
            ui.nickname
        FROM post p
                 INNER JOIN user_info ui ON p.author_id = ui.id
        ORDER BY p.created_at DESC
    </select>
</mapper>